        .step-card { padding: 20px; }
        .step-icon { width: 60px; height: 60px; border: 1px solid var(--gold); border-radius: 50%; display: flex; align-items: center; justify-content: center; margin: 0 auto 20px auto; color: var(--gold); font-size: 20px; }
        .step-title { font-size: 18px; margin-bottom: 10px; }
        .step-desc { color: var(--text-muted); font-size: 14px; line-height: 1.6; }

