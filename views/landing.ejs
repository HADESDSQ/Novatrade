        .slider-wrapper { display: flex; gap: 20px; overflow-x: auto; padding: 20px 5%; scroll-snap-type: x mandatory; -webkit-overflow-scrolling: touch; }
        .slider-wrapper::-webkit-scrollbar { display: none; } /* Hide scrollbar */
        
        .review-card { 
