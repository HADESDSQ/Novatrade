        .hero-desc { color: var(--text-muted); max-width: 600px; margin-bottom: 40px; font-size: 18px; }
        
        .cta-group { display: flex; gap: 20px; }
        .btn-primary { background: var(--gold); color: black; padding: 15px 40px; font-weight: bold; border-radius: 2px; text-transform: uppercase; font-size: 14px; letter-spacing: 1px; transition: 0.3s; }
