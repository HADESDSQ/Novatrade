        .btn-secondary { border: 1px solid #333; color: white; padding: 15px 40px; font-weight: bold; border-radius: 2px; text-transform: uppercase; font-size: 14px; letter-spacing: 1px; transition: 0.3s; }
        .btn-secondary:hover { border-color: white; }

        /* STATS BAR */
