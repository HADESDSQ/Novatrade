<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Command | NovaTrading</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <style>
        :root { --gold: #D4AF37; --dark: #000; --panel: #111; --border: #333; }
        body { background: var(--dark); color: white; font-family: 'Inter', sans-serif; padding: 0; margin: 0; }
        
        /* SIDEBAR FIXED (Added Z-Index) */
        .sidebar { 
            width: 250px; background: var(--panel); height: 100vh; 
            position: fixed; top:0; left:0;
            border-right: 1px solid var(--border); padding: 20px; 
            z-index: 1000; /* Ensures it stays on top */
        }

        /* MAIN CONTENT (Increased Margin) */
        .main { 
            margin-left: 270px; /* Added extra space so it doesn't cut */
            padding: 30px; 
            width: calc(100% - 270px); /* Prevents overflow */
        }
        
        .logo { font-size: 1.5rem; font-weight: bold; margin-bottom: 40px; display: block; color: white; text-decoration: none;}
        .nav-link { display: block; padding: 12px; color: #888; text-decoration: none; margin-bottom: 5px; border-radius: 5px; transition: 0.3s; }
        .nav-link:hover, .nav-link.active { background: rgba(212, 175, 55, 0.1); color: var(--gold); }
        .nav-link i { width: 25px; }

        /* STATS GRID */
        .stats-grid { display: grid; grid-template-columns: repeat(auto-fit, minmax(200px, 1fr)); gap: 20px; margin-bottom: 30px; }
        .stat-card { background: var(--panel); padding: 20px; border-radius: 12px; border: 1px solid var(--border); }
        .stat-label { color: #888; font-size: 0.85rem; margin-bottom: 5px; }
        .stat-value { font-size: 1.8rem; font-weight: bold; color: white; }
        .stat-icon { float: right; color: var(--gold); opacity: 0.5; font-size: 1.5rem; }

        /* TABLES & SCROLL FIX */
        .section-title { margin-top: 40px; margin-bottom: 15px; font-size: 1.1rem; color: var(--gold); border-bottom: 1px solid var(--border); padding-bottom: 10px; }
        
        /* NEW: This container allows the table to scroll if it gets too wide */
        .table-box { 
            background: var(--panel); border-radius: 12px; border: 1px solid var(--border); 
            overflow-x: auto; /* <--- CRITICAL FIX */
        }
        
        table { width: 100%; border-collapse: collapse; min-width: 600px; /* Ensures table doesn't squash */ }
        th { background: #1a1a1a; padding: 15px; text-align: left; font-size: 0.85rem; color: #888; white-space: nowrap; }
        td { padding: 15px; border-top: 1px solid var(--border); font-size: 0.9rem; white-space: nowrap; }
        
        /* BUTTONS & BADGES */
        .btn { padding: 6px 12px; border: none; border-radius: 4px; cursor: pointer; font-size: 0.8rem; font-weight: bold; }
        .btn-approve { background: #00b894; color: black; }
        .btn-reject { background: #d63031; color: white; }
        
        .badge { padding: 4px 8px; border-radius: 4px; font-size: 0.75rem; font-weight: 600; display: inline-flex; align-items: center; gap: 5px; }
        .badge-pending { background: rgba(253, 203, 110, 0.2); color: #fdcb6e; }
        .badge-approved { background: rgba(0, 184, 148, 0.2); color: #00b894; }
        .badge-rejected { background: rgba(214, 48, 49, 0.2); color: #d63031; }
        
        /* ONLINE / OFFLINE DOTS */
        .dot { width: 8px; height: 8px; border-radius: 50%; display: inline-block; }
        .dot-green { background: #00b894; box-shadow: 0 0 10px #00b894; }
        .dot-grey { background: #666; }
    </style>
</head>
<body>

    <div class="sidebar">
        <a href="#" class="logo">NOVA<span style="color:var(--gold)">ADMIN</span></a>
        <a href="#" class="nav-link active"><i class="fas fa-home"></i> Overview</a>
        <a href="#users" class="nav-link"><i class="fas fa-users"></i> Clients</a>
        <a href="#deposits" class="nav-link"><i class="fas fa-wallet"></i> Requests</a>
        <a href="/logout" class="nav-link" style="margin-top:50px;"><i class="fas fa-sign-out-alt"></i> Logout</a>
    </div>

    <div class="main">
        
        <div class="stats-grid">
            <% const realClients = users.filter(u => !u.email.endsWith('@nova.com')); %>
            
            <div class="stat-card">
                <i class="fas fa-users stat-icon"></i>
                <div class="stat-label">Total Clients</div>
                <div class="stat-value"><%= realClients.length %></div>
            </div>
            
            <div class="stat-card">
                <i class="fas fa-clock stat-icon"></i>
                <div class="stat-label">Pending Requests</div>
                <div class="stat-value"><%= transactions.filter(t => t.status === 'pending').length %></div>
            </div>

            <div class="stat-card">
                <i class="fas fa-wifi stat-icon"></i>
                <div class="stat-label">Online Now</div>
                <div class="stat-value"><%= realClients.filter(u => u.isOnline).length %></div>
            </div>
        </div>

        <div class="section-title" id="deposits">Manage Requests</div>
        <div class="table-box">
            <table>
                <thead>
                    <tr>
                        <th>Client Email</th>
                        <th>Type</th>
                        <th>Amount</th>
                        <th>Method</th>
                        <th>Status</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    <% transactions.slice().reverse().forEach(tx => { %>
                        <% const client = users.find(u => u._id === tx.userId); %>
                        <tr>
                            <td><%= client ? client.email : 'Unknown' %></td>
                            <td>
                                <% if(tx.type === 'deposit') { %>
                                    <span style="color:#00b894"><i class="fas fa-arrow-down"></i> Deposit</span>
                                <% } else { %>
                                    <span style="color:#fab1a0"><i class="fas fa-arrow-up"></i> Withdraw</span>
                                <% } %>
                            </td>
                            <td>$<%= tx.amount.toLocaleString() %></td>
                            <td><%= tx.method %></td>
                            <td><span class="badge badge-<%= tx.status %>"><%= tx.status %></span></td>
                            <td>
                                <% if(tx.status === 'pending') { %>
                                    <form action="/admin/approve" method="POST" style="display:inline;">
                                        <input type="hidden" name="userId" value="<%= tx.userId %>">
                                        <input type="hidden" name="amount" value="<%= tx.amount %>">
                                        <button class="btn btn-approve"><i class="fas fa-check"></i></button>
                                    </form>
                                    <form action="/admin/reject" method="POST" style="display:inline;">
                                        <input type="hidden" name="userId" value="<%= tx.userId %>">
                                        <input type="hidden" name="amount" value="<%= tx.amount %>">
                                        <button class="btn btn-reject"><i class="fas fa-times"></i></button>
                                    </form>
                                <% } else { %>
                                    <span style="color:#666; font-size:0.8rem;">Processed</span>
                                <% } %>
                            </td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
        </div>

        <div class="section-title" id="users">Client Database</div>
        <div class="table-box">
            <table>
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Email</th>
                        <th>Balance</th>
                        <th>Password (Sim)</th>
                        <th>Status</th>
                    </tr>
                </thead>
                <tbody>
                    <% realClients.forEach(client => { %>
                        <tr>
                            <td style="font-weight:bold;"><%= client.name %></td>
                            <td><%= client.email %></td>
                            <td style="color:var(--gold);">$<%= client.balance.toLocaleString() %></td>
                            <td style="color:#666; font-family:monospace;"><%= client.password %></td>
                            
                            <td>
                                <% if(client.isOnline) { %>
                                    <span class="badge badge-approved" style="background:rgba(0,184,148,0.1);">
                                        <span class="dot dot-green"></span> &nbsp; Online
                                    </span>
                                <% } else { %>
                                    <span class="badge" style="color:#666; background:rgba(255,255,255,0.05);">
                                        <span class="dot dot-grey"></span> &nbsp; Offline
                                    </span>
                                <% } %>
                            </td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
        </div>

    </div>
</body>
</html>