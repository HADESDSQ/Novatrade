<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dashboard | NovaTrading Capital</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <style>
        :root {
            --gold: #D4AF37;
            --dark-bg: #0a0a0a;
            --glass: rgba(255, 255, 255, 0.05);
            --border: rgba(255, 255, 255, 0.1);
        }

        * { margin: 0; padding: 0; box-sizing: border-box; font-family: 'Inter', sans-serif; }
        
        body {
            background-color: var(--dark-bg);
            color: white;
            display: flex;
            min-height: 100vh;
        }

        /* --- SIDEBAR --- */
        .sidebar {
            width: 260px;
            background: #111;
            border-right: 1px solid var(--border);
            padding: 20px;
            display: flex;
            flex-direction: column;
            position: fixed;
            height: 100%;
        }

        .brand {
            font-size: 1.5rem;
            font-weight: bold;
            color: white;
            margin-bottom: 40px;
            padding-left: 10px;
        }

        .menu-item {
            padding: 15px;
            color: #888;
            text-decoration: none;
            display: flex;
            align-items: center;
            gap: 15px;
            border-radius: 10px;
            transition: 0.3s;
            margin-bottom: 5px;
        }

        .menu-item:hover, .menu-item.active {
            background: var(--glass);
            color: var(--gold);
        }

        .menu-item i { width: 20px; text-align: center; }

        /* --- MAIN CONTENT --- */
        .main-content {
            flex: 1;
            margin-left: 260px; /* Width of sidebar */
            padding: 30px;
        }

        .top-bar {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 30px;
        }

        .user-info {
            display: flex;
            align-items: center;
            gap: 15px;
        }

        .avatar {
            width: 40px; height: 40px;
            background: var(--gold);
            color: black;
            border-radius: 50%;
            display: flex; align-items: center; justify-content: center;
            font-weight: bold;
        }

        /* --- CARDS --- */
        .balance-card {
            background: linear-gradient(135deg, #222, #111);
            border: 1px solid var(--gold);
            padding: 30px;
            border-radius: 20px;
            margin-bottom: 30px;
            position: relative;
            overflow: hidden;
        }

        .balance-card::after {
            content: ''; position: absolute; top: -50px; right: -50px;
            width: 200px; height: 200px; background: var(--gold);
            filter: blur(80px); opacity: 0.1;
        }

        .action-buttons {
            display: flex; gap: 15px; margin-top: 20px;
        }

        .btn {
            padding: 12px 25px;
            border-radius: 8px;
            border: none;
            cursor: pointer;
            font-weight: 600;
            transition: 0.3s;
        }

        .btn-gold { background: var(--gold); color: black; }
        .btn-gold:hover { transform: translateY(-2px); box-shadow: 0 5px 15px rgba(212, 175, 55, 0.2); }
        
        .btn-outline { background: transparent; border: 1px solid #444; color: #ccc; }
        .btn-outline:hover { border-color: white; color: white; }

        /* --- TABLE --- */
        .table-container {
            background: #111;
            border-radius: 15px;
            padding: 20px;
            border: 1px solid var(--border);
        }

        table { width: 100%; border-collapse: collapse; }
        th { text-align: left; color: #666; padding: 15px; font-size: 0.85rem; border-bottom: 1px solid #222; }
        td { padding: 15px; border-bottom: 1px solid #222; color: #eee; font-size: 0.9rem; }
        
        .status {
            padding: 5px 10px; border-radius: 20px; font-size: 0.75rem; font-weight: bold;
        }
        .pending { background: rgba(255, 165, 0, 0.15); color: orange; }
        .approved { background: rgba(0, 255, 0, 0.15); color: #00ff00; }
        .rejected { background: rgba(255, 0, 0, 0.15); color: #ff4444; }

        /* --- MODAL (POPUP) --- */
        .modal-overlay {
            position: fixed; top: 0; left: 0; width: 100%; height: 100%;
            background: rgba(0, 0, 0, 0.85); backdrop-filter: blur(5px);
            z-index: 1000; display: none; /* Hidden by default */
            align-items: center; justify-content: center;
        }
        .modal-box {
            background: #1a1a1a; border: 1px solid #333; width: 90%; max-width: 450px;
            padding: 30px; border-radius: 20px; position: relative;
            box-shadow: 0 0 50px rgba(0,0,0,0.5);
            animation: popIn 0.3s ease;
        }
        @keyframes popIn { from {transform: scale(0.9); opacity: 0;} to {transform: scale(1); opacity: 1;} }
        
        .coin-option {
            display: flex; align-items: center; gap: 15px; padding: 15px;
            border: 1px solid #333; border-radius: 10px; cursor: pointer; margin-bottom: 10px;
        }
        .coin-option:hover, .coin-option.selected { border-color: var(--gold); background: rgba(212, 175, 55, 0.05); }
        .close-btn { position: absolute; top: 20px; right: 20px; cursor: pointer; color: #666; }
        .step-2 { display: none; }

        /* Mobile Responsive */
        @media (max-width: 768px) {
            .sidebar { display: none; } /* Hide sidebar on mobile for now */
            .main-content { margin-left: 0; padding: 15px; }
        }
    </style>
</head>
<body>

    <div class="sidebar">
        <div class="brand">NOVA<span style="color:var(--gold)">CAPITAL</span></div>
        
        <a href="/dashboard" class="menu-item active">
            <i class="fas fa-house"></i> Dashboard
        </a>

        <a href="/trade" class="menu-item">
            <i class="fas fa-chart-line"></i> Live Trading
        </a>

        <a href="#" onclick="openDepositModal()" class="menu-item">
            <i class="fas fa-wallet"></i> Deposit Funds
        </a>
        
        <a href="/withdraw" class="menu-item">
            <i class="fas fa-money-bill-transfer"></i> Withdraw
        </a>
        
        <a href="#" class="menu-item">
            <i class="fas fa-user"></i> Profile
        </a>
        
        <a href="/logout" class="menu-item" style="margin-top:auto;">
            <i class="fas fa-sign-out-alt"></i> Logout
        </a>
    </div>

    <div class="main-content">
        <div class="top-bar">
            <div>
                <h2 style="font-weight: 400;">Welcome back,</h2>
                <h1 style="color:white;"><%= user.name %></h1>
            </div>
            <div class="user-info">
                <div class="avatar"><%= user.name.charAt(0) %></div>
            </div>
        </div>

        <div class="balance-card">
            <p style="color:#888; font-size: 0.9rem; text-transform: uppercase;">Total Equity</p>
            <h1 style="font-size: 3rem; margin: 10px 0;">$<%= parseFloat(user.balance).toLocaleString('en-US', {minimumFractionDigits: 2}) %></h1>
            
            <div class="action-buttons">
                <button class="btn btn-gold" onclick="openDepositModal()"><i class="fas fa-plus"></i> Deposit</button>
                <a href="/withdraw"><button class="btn btn-outline"><i class="fas fa-arrow-up"></i> Withdraw</button></a>
            </div>
        </div>

        <h3 style="margin-bottom: 20px;">Recent Transactions</h3>
        <div class="table-container">
            <table>
                <thead>
                    <tr>
                        <th>Type</th>
                        <th>Amount</th>
                        <th>Method</th>
                        <th>Status</th>
                    </tr>
                </thead>
                <tbody>
                    <% if(transactions.length > 0) { %>
                        <% transactions.forEach(tx => { %>
                            <tr>
                                <td style="text-transform: capitalize;"><%= tx.type %></td>
                                <td>$<%= tx.amount %></td>
                                <td><%= tx.method %></td>
                                <td><span class="status <%= tx.status %>"><%= tx.status %></span></td>
                            </tr>
                        <% }) %>
                    <% } else { %>
                        <tr>
                            <td colspan="4" style="text-align:center; color:#444; padding:30px;">No transactions yet.</td>
                        </tr>
                    <% } %>
                </tbody>
            </table>
        </div>
    </div>

    <div class="modal-overlay" id="depositModal">
        <div class="modal-box">
            <i class="fas fa-times close-btn" onclick="closeModal()"></i>
            
            <div id="step1">
                <h2 style="margin-bottom: 5px;">Deposit Funds</h2>
                <p style="color:#666; margin-bottom: 20px; font-size:0.9rem;">Select currency to continue.</p>

                <div class="coin-option" onclick="selectCoin('BTC')">
                    <i class="fab fa-bitcoin" style="color:#f7931a; font-size:1.5rem;"></i>
                    <div><strong>Bitcoin</strong><br><span style="font-size:0.8rem; color:#666;">BTC Network</span></div>
                </div>
                <div class="coin-option" onclick="selectCoin('ETH')">
                    <i class="fab fa-ethereum" style="color:#627eea; font-size:1.5rem;"></i>
                    <div><strong>Ethereum</strong><br><span style="font-size:0.8rem; color:#666;">ERC20 Network</span></div>
                </div>

                <div style="margin-top:20px;">
                    <label style="font-size:0.85rem; color:#888;">Amount (USD)</label>
                    <input type="number" id="depositAmount" placeholder="1000" style="width:100%; padding:12px; background:#000; border:1px solid #333; color:white; border-radius:8px; margin-top:5px; outline:none;">
                </div>

                <button class="btn btn-gold" style="width:100%; margin-top:20px;" onclick="goToStep2()">Continue</button>
            </div>

            <div id="step2" class="step-2">
                <h2 style="text-align:center; margin-bottom:10px;">Scan to Pay</h2>
                <p style="text-align:center; color:#888; font-size:0.9rem;">Send exactly <strong style="color:white;">$<span id="displayAmount"></span></strong></p>

                <div style="text-align:center; margin: 20px 0;">
                    <img src="https://api.qrserver.com/v1/create-qr-code/?size=150x150&data=example" style="border-radius:10px;">
                </div>

                <p style="font-size:0.8rem; color:#666; margin-bottom:5px;">Wallet Address:</p>
                <div style="background:#000; padding:10px; border-radius:5px; font-family:monospace; color:#ccc; word-break:break-all; border:1px solid #333;">
                    <span id="walletAddress">Loading...</span>
                </div>

                <form action="/deposit" method="POST" style="margin-top:20px;">
                    <input type="hidden" name="amount" id="formAmount">
                    <input type="hidden" name="method" id="formMethod">
                    <button type="submit" class="btn btn-gold" style="width:100%;">I Have Made Payment</button>
                </form>
                <p onclick="closeModal()" style="text-align:center; margin-top:15px; font-size:0.8rem; color:#666; cursor:pointer;">Cancel</p>
            </div>
        </div>
    </div>

    <script>
        let selectedCoin = null;
        const wallets = {
            'BTC': 'bc1qxy2kgdygjrsqtzq2n0yrf2493p83kkfjhx0wlh',
            'ETH': '0x71C7656EC7ab88b098defB751B7401B5f6d8976F'
        };

        function openDepositModal() {
            document.getElementById('depositModal').style.display = 'flex';
        }

        function closeModal() {
            document.getElementById('depositModal').style.display = 'none';
            document.getElementById('step1').style.display = 'block';
            document.getElementById('step2').style.display = 'none';
        }

        function selectCoin(coin) {
            selectedCoin = coin;
            document.querySelectorAll('.coin-option').forEach(el => el.classList.remove('selected'));
            event.currentTarget.classList.add('selected');
        }

        function goToStep2() {
            const amount = document.getElementById('depositAmount').value;
            if(!selectedCoin || !amount) return alert('Please select coin and enter amount');

            document.getElementById('displayAmount').innerText = amount;
            document.getElementById('walletAddress').innerText = wallets[selectedCoin];
            document.getElementById('formAmount').value = amount;
            document.getElementById('formMethod').value = selectedCoin;

            document.getElementById('step1').style.display = 'none';
            document.getElementById('step2').style.display = 'block';
        }
    </script>
</body>
</html>